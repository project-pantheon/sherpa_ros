    <actuator name="left_rear_axle_motor">    
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>${mec_red}</mechanicalReduction>
    </actuator>
  </transmission>
  
  <!-- right_steer_transmission -->
  <transmission name="right_rear_steer_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_rear_steer">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_rear_steer_motor">    
