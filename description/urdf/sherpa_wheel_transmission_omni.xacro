<?xml version="1.0"?>

<!-- Sherpa Wheels-->

<robot name ="sherpa_wheel_transmission" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:property name="mec_red" value="300"/>
    
  <!-- left_steer_transmission -->
  <transmission name="left_front_steer_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_front_steer">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_front_steer_motor">    
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>${mec_red}</mechanicalReduction>
    </actuator>
  </transmission>
 
  <!-- left_front_axle_transmission -->
  <transmission name="left_front_axle_transmission">
    <type>transmission_interface/SimpleTransmission</type>
